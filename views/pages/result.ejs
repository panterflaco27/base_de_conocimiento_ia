            <tr class="bg-primary text-white">
                <th scope="col">Nombre</th>
                <th scope="col">Descripci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
            <% datos.forEach(function(archivo){ %>
            <tr class="text-black">
                <style>
                    .text-black{
                        font-family: Arial, Helvetica, sans-serif;
                        font-size: small;
                    }
                </style>
                <th><%= archivo.nombre%></th>
                <th><%= archivo.descripcion%></th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/views/pages/principal.ejs" class="btn btn-secondary">Atras</a>
</div>
</body>
<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>