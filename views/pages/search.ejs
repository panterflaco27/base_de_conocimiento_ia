<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">
        <main>
            <div class="jumbotron text-bg-dark">
                <h1>Base de conocimiento</h1>
                <p>Nodos dentro de la base de conocimiento</p>
                <h2>Resultados de busqueda</h2>
            </div>
        </main>

        <div class="container">
            <table class="table table-bordered table striped text-center mt-2">
                <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci&oacute;n</th>
                    </tr>
                </thead>

                <tbody>
                    <style>
                        .text-black{
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: small;
                        }
                    </style>

                    <% results.forEach(function(result) { %>
                        <tr class="text-black">
                            <style>
                                .text-black{
                                    font-family: Arial, Helvetica, sans-serif;
                                    font-size: small;
                                }
                            </style>
                          <td><%= result.properties.nombre %></td>
                          <td><%= result.properties.descripcion %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <a href="/views/pages/principal.ejs" class="btn btn-secondary">Atras</a>
        </div>
    </body>

    <footer>
        <% include('../partials/footer'); %>
    </footer>
</html>